<% if current_user %>
  <%= form_for(@question) do |f| %>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% else %>
  <h3>Please sign in.</h3>
<% end %>
